.footerNav
  +above($desktop)
    lost-column 6/12 flex
    lost-offset -1/12 flex
    lost-offset 1/12 flex

  &-item
    margin-right 1.5rem
    color $lightGrey
    text-decoration none
    transition 300ms all ease-in-out
    
    +below($desktop)
      display block
      margin-right 0
      margin-bottom 1rem
    
    &:hover
      color white