.unslider
  position relative
  margin 0
  padding 0
  width 100%

.unslider-wrap
  position relative
  overflow auto

.unslider-wrap.unslider-carousel>li
  float left
  
  & img
    width 100%

.unslider li
.unslider ol
.unslider ul
  margin 0
  padding 0
  border 0
  list-style none

.unslider-arrow
  position absolute
  top 50%
  transform translateY(-50%)
  display block
  width 15px
  height 26px
  text-decoration none
  cursor pointer
  
  & img
    display block

.unslider-arrow.prev
  left 30px

.unslider-arrow.next
  right 30px