.mainNav
  display flex
  align-items center
  
  +below($desktop)
    display none
  
  &-item
    position relative
    padding-top 2.5rem
    padding-bottom 2.5rem
    text-decoration none
    color $grey
    margin-right 1rem
    margin-left 1rem
    transition 250ms top ease-in-out
  
    &:before
      position absolute
      top -4px
      left -.5rem
      right -.5rem
      height 4px
      content ''
      background-color $lightBlue
      transition inherit
      
    &:hover:before
    &.active:before
      top 0
      
.btn__lang
  +below($desktop)
    display none
    
.mainNav-trigger
  color $blue
  text-decoration none
  font-size 2.5rem
  line-height 1
  display none
  
  +below($desktop)
    display block
  
.mainNav__mobile
  shadow()
  position fixed
  right 90%
  padding-top 99px
  width 90%
  background-color white
  text-align center
  
  &-item
    padding-top 1.5rem
    padding-bottom 1.5rem
    text-decoration none
    border-bottom 1px solid $lightBlue
    color $grey
    display block