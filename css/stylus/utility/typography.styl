// ======================================================//
// Text utilities
// ======================================================//
$text-white
  color white
  
$text-center
  text-align center

.text
  color $grey
  line-height 1.75

.title
$title
  margin-top 0
  margin-bottom 1.5rem
  font-size 2rem
  line-height 1.125
  font-weight 400
  color $grey
  
  &__small
    @extend $title
    font-size 1.5rem
    font-weight 700
  
  &__white
    color white

  &__orange
    color $orange

.subtitle
  font-size 1.5rem
  margin-top 0
  line-height 1.5
  color $grey
  
.quote
  font-size 2.5rem
  color $lightBlue
