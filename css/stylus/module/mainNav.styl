.mainNav
  clear fix
  
  +below(1120px)
    display none
    
  &-menu
    clear fix
    margin 0
    padding 0
    list-style none
    
    &Item
      position relative
      float left
      margin-right 1em
      margin-left 1em
      align-items center
      display flex
      height 99px
      
      &:first-child
        margin-left 0
        
      &:hover .mainNav-dropdown
        display block
  
  &-dropdown
    position absolute
    top 100%
    left 50%
    display none
    padding 0
    transform translateX(-50%)
    min-width 230px
    background-color rgba(white, .9)
    list-style none
    
    li
      padding .5em 1.5em
      border-bottom 1px solid lighten($frisa__grey, 50%)
      
      &:hover
        background-color lighten($frisa__grey, 50%)
      
      &:last-child
        border-bottom 0

    a
      color $frisa__dark-grey
      display block
      text-decoration none
        
  &-link
    position relative
    padding 2.5em .5em
    display block
    color white
    text-decoration none
    
    &:before
      position absolute
      bottom 0
      left 0
      display block
      width 100%
      height 0
      background-color white
      content ''
      transition 350ms all ease
    
    &:hover:before
      height 4px
      content ''
          
.mainNav-actions
  display flex
  float right
  align-items center
  height 99px
  
  +below(1120px)
    display none

.search
  display none