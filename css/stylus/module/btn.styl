.btn
$btn
  display inline-block
  margin 0
  text-align center
  text-decoration none
  font-size .75rem
  padding .25rem .5rem
  border 1px solid white
  border-radius 50px
  color white

.btn__lang
.btn__send
  @extend $btn
  background-color $lightBlue
  color white

.btn__send
  font-size 1rem
  padding .25rem 1.5rem